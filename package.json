{
  "name": "chatbeto-listener",
  "version": "1.0.0",
  "main": "server.js",
  "description": "Webhook service for ChatBETO to listen and sync ChatGPT conversations automatically",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "echo 'Linting not configured yet'",
    "docker:build": "docker build -t chatbeto-listener .",
    "docker:run": "docker run -p 3000:3000 --env-file .env chatbeto-listener",
    "docker:deploy": "cd scripts/deployment && docker-compose up -d --build",
    "docker:logs": "cd scripts/deployment && docker-compose logs -f",
    "docker:stop": "cd scripts/deployment && docker-compose down",
    "health:check": "scripts/utils/health-check.sh",
    "dev:start": "scripts/utils/dev-start.sh",
    "deploy:prod": "scripts/deployment/deploy.sh"
  },
  "keywords": [
    "chatgpt",
    "webhook",
    "chatbeto",
    "nodejs",
    "mysql",
    "sync"
  ],
  "author": "ChatBETO Team",
  "license": "MIT",
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.1.0",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "openai": "^6.9.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "supertest": "^7.1.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.js",
      "**/*.test.js"
    ]
  }
}
